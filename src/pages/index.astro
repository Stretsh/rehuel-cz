import Question from '../components/QuestionsLi.astro'
---
<script>
	document.addEventListener('DOMContentLoaded', function () {
		const questions = document.getElementById('questions')
		const nav = document.getElementById('nav')

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (!entry.isIntersecting) {
					nav.classList.remove('slide-hidden')
					nav.classList.add('slide-visible', 'sticky', 'top-0', 'z-50')
				} else {
					nav.classList.remove('slide-visible', 'sticky', 'top-0', 'z-50')
					nav.classList.add('slide-hidden')
				}
			});
		}, {threshold: [0]})

		observer.observe(questions)
	})
</script>

