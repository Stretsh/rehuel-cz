---
import {Icon} from 'astro-icon/components'

const { icon, link, text } = Astro.props
---

<li class="group py-2 cursor-pointer">
    <a href={link} class="flex items-center gap-4">
        <div class="border rounded border-[#CCC] p-2 group-hover:bg-[#CCC] group-hover:border-[#EEE] transition ease-in-out duration-300">
            <Icon name={icon} size="1.3em"/>
        </div>
        <p>{ text }</p>
    </a>
</li>